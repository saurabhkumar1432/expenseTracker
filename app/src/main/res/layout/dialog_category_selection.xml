<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:maxHeight="@dimen/dialog_max_height">

    <!-- Fixed Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dialog_padding"
        android:paddingTop="@dimen/dialog_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a category to set budget limit"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingHorizontal="@dimen/dialog_padding"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:paddingBottom="8dp">
            <!-- Chips will be added programmatically -->
        </com.google.android.material.chip.ChipGroup>

    </ScrollView>

    <!-- Fixed Footer with Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingHorizontal="@dimen/dialog_padding"
        android:paddingTop="12dp"
        android:paddingBottom="@dimen/dialog_padding"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelCategory"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:text="Cancel"
            android:textSize="@dimen/button_text_size"
            android:minHeight="@dimen/button_min_height"
            android:minWidth="72dp"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:paddingVertical="@dimen/button_padding_vertical"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectCategory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_min_height"
            android:text="Continue"
            android:textSize="@dimen/button_text_size"
            android:minHeight="@dimen/button_min_height"
            android:minWidth="88dp"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:paddingVertical="@dimen/button_padding_vertical"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>
