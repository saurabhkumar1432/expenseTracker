<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <!-- Beautiful gradient header with financial summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_header"
            android:paddingHorizontal="@dimen/header_padding_horizontal"
            android:paddingTop="@dimen/header_padding_top"
            android:paddingBottom="@dimen/header_padding_bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:minHeight="@dimen/header_min_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Wallet"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_title_text_size"
                    android:textStyle="bold"
                    android:maxLines="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBudget"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="@dimen/icon_button_size"
                    android:layout_height="@dimen/icon_button_size"
                    app:icon="@drawable/ic_budget_custom"
                    app:iconTint="@null"
                    app:backgroundTint="@color/transparent"
                    app:iconSize="20dp"
                    android:contentDescription="Budget Management" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="@dimen/icon_button_size"
                    android:layout_height="@dimen/icon_button_size"
                    app:icon="@drawable/ic_settings"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/transparent"
                    app:iconSize="20dp"
                    android:contentDescription="Settings" />

            </LinearLayout>

            <!-- Financial Summary Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="4dp">

                <!-- Balance Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBalance"
                    style="@style/Widget.App.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/summary_card_margin"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/summary_card_padding_horizontal"
                        android:paddingVertical="@dimen/summary_card_padding_vertical"
                        android:gravity="center"
                        android:minHeight="@dimen/summary_card_min_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="@dimen/card_label_text_size"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/txtBalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/card_amount_text_size"
                            android:autoSizeStepGranularity="1sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Credit Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIncome"
                    style="@style/Widget.App.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/summary_card_margin"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="?attr/colorCreditContainer"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/summary_card_padding_horizontal"
                        android:paddingVertical="@dimen/summary_card_padding_vertical"
                        android:gravity="center"
                        android:minHeight="@dimen/summary_card_min_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorCredit"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="@dimen/card_label_text_size"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/txtCredit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorCredit"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/card_amount_text_size"
                            android:autoSizeStepGranularity="1sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Debit Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExpense"
                    style="@style/Widget.App.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/summary_card_margin"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="?attr/colorDebitContainer"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/summary_card_padding_horizontal"
                        android:paddingVertical="@dimen/summary_card_padding_vertical"
                        android:gravity="center"
                        android:minHeight="@dimen/summary_card_min_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expense"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorDebit"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="@dimen/card_label_text_size"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/txtDebit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorDebit"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/card_amount_text_size"
                            android:autoSizeStepGranularity="1sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Transaction List -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recent Transactions Header -->
            <LinearLayout
                android:id="@+id/transactionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Transactions"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="@dimen/section_title_text_size"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:id="@+id/scrollViewFilters">
                    
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:singleLine="true"
                        app:chipSpacing="4dp" />
                        
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilter"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="@dimen/icon_button_size"
                    android:layout_height="@dimen/icon_button_size"
                    android:layout_marginEnd="6dp"
                    app:icon="@drawable/ic_filter"
                    app:iconTint="?attr/colorOnSurface"
                    app:iconSize="20dp"
                    android:contentDescription="Filter transactions"
                    app:backgroundTint="?attr/colorSurfaceVariant"
                    app:rippleColor="?attr/colorOnSurface"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDateFilter"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="@dimen/icon_button_size"
                    android:layout_height="@dimen/icon_button_size"
                    android:layout_marginEnd="6dp"
                    app:icon="@drawable/ic_calendar"
                    app:iconTint="?attr/colorOnSurface"
                    app:iconSize="20dp"
                    android:contentDescription="@string/desc_date_filter"
                    app:backgroundTint="?attr/colorSurfaceVariant"
                    app:rippleColor="?attr/colorOnSurface"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline" />

                <TextView
                    android:id="@+id/txtTransactionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 entries"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textSize="@dimen/caption_text_size"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                style="?attr/materialCardViewFilledStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_search"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="@string/desc_search" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/search_transactions"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:maxLines="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearSearch"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="@dimen/icon_button_size"
                        android:layout_height="@dimen/icon_button_size"
                        app:icon="@drawable/ic_close"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:iconSize="18dp"
                        android:contentDescription="@string/desc_clear_search"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date Range Display/Clear Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="All dates"
                android:visibility="gone"
                style="@style/Widget.Material3.Chip.Filter"
                app:closeIconEnabled="true" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/empty_state_padding"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/emptyStateIcon"
                    android:layout_width="@dimen/empty_state_icon"
                    android:layout_height="@dimen/empty_state_icon"
                    android:src="@drawable/ic_currency"
                    android:alpha="0.3"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="No transactions" />

                <TextView
                    android:id="@+id/emptyStateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Transactions Yet"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/emptyStateMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start tracking your finances by adding your first transaction using the + button below"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetStarted"
                    style="@style/Widget.ExpenseTracker.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_min_height"
                    android:text="Get Started"
                    android:textSize="@dimen/button_text_size"
                    android:minHeight="@dimen/button_min_height"
                    android:paddingHorizontal="@dimen/button_padding_horizontal"
                    android:paddingVertical="@dimen/button_padding_vertical"
                    android:layout_marginTop="24dp"
                    app:icon="@drawable/ic_add" />

            </LinearLayout>

            <!-- RecyclerView for transactions -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="16dp"
                android:paddingBottom="100dp"
                android:clipToPadding="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for adding transactions -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:rippleColor="?attr/colorOnPrimary"
        android:contentDescription="Add new transaction" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
