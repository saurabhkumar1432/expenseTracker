<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:contentDescription="Expense item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <!-- Compact Transaction Icon -->
        <View
            android:id="@+id/iconBackground"
            android:layout_width="@dimen/transaction_icon_background"
            android:layout_height="@dimen/transaction_icon_background"
            android:background="@drawable/circle_background"
            android:backgroundTint="?attr/colorCreditContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iconTransaction"
            android:layout_width="@dimen/transaction_icon"
            android:layout_height="@dimen/transaction_icon"
            android:src="@drawable/ic_arrow_upward"
            app:tint="?attr/colorCredit"
            android:contentDescription="Transaction type"
            app:layout_constraintStart_toStartOf="@id/iconBackground"
            app:layout_constraintEnd_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toTopOf="@id/iconBackground"
            app:layout_constraintBottom_toBottomOf="@id/iconBackground" />

        <!-- Transaction Details -->
        <TextView
            android:id="@+id/txtReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:text="Salary"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintEnd_toStartOf="@id/txtAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <LinearLayout
            android:id="@+id/metaLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintEnd_toStartOf="@id/txtAmount"
            app:layout_constraintTop_toBottomOf="@id/txtReason">

            <TextView
                android:id="@+id/txtMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/transaction_metadata_text_size" />

            <View
                android:layout_width="@dimen/separator_dot"
                android:layout_height="@dimen/separator_dot"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 min ago"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/transaction_metadata_text_size" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/transaction_metadata_text_size"
                android:layout_marginStart="8dp" />

            <View
                android:layout_width="@dimen/separator_dot"
                android:layout_height="@dimen/separator_dot"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+â‚¹5K"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorCredit"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
