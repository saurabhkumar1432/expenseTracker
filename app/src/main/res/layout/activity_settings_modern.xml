<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_header"
        app:title="Settings"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Theme Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="?attr/materialCardViewFilledStyle"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_settings"
                            app:tint="?attr/colorPrimary"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="?attr/colorPrimaryContainer"
                            android:padding="8dp"
                            android:contentDescription="@string/desc_theme"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Theme"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose your preferred theme"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThemeSystem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThemeLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThemeDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark"
                            style="@style/Widget.Material3.Chip.Filter" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Budget Management Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="?attr/materialCardViewFilledStyle"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_currency"
                        app:tint="?attr/colorPrimary"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="?attr/colorPrimaryContainer"
                        android:padding="8dp"
                        android:contentDescription="@string/desc_budget"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set Category Budgets"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control spending by setting limits"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageBudgets"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_min_height"
                        android:text="Manage"
                        android:textSize="@dimen/button_text_size"
                        android:minHeight="@dimen/button_min_height"
                        android:paddingHorizontal="@dimen/button_padding_horizontal"
                        android:paddingVertical="@dimen/button_padding_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Methods Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Payment Methods"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- RecyclerView for Payment Methods -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPaymentMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="8dp"
                tools:listitem="@layout/item_payment_method_modern"
                tools:itemCount="3" />

            <!-- Empty State for Payment Methods -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_payment"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6"
                    android:contentDescription="@string/desc_no_payment_methods"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Payment Methods"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your first payment method"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Categories Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Categories"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- RecyclerView for Categories -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="16dp"
                tools:listitem="@layout/item_payment_method_modern"
                tools:itemCount="4" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed Bottom Button Layout -->
    <LinearLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabAddCategory"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_min_height"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="Add Category"
            android:textSize="@dimen/button_text_size"
            android:minHeight="@dimen/button_min_height"
            android:paddingHorizontal="12dp"
            android:paddingVertical="@dimen/button_padding_vertical"
            app:icon="@drawable/ic_add"
            app:iconSize="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabAddPaymentMethod"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_min_height"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Add Payment"
            android:textSize="@dimen/button_text_size"
            android:minHeight="@dimen/button_min_height"
            android:paddingHorizontal="12dp"
            android:paddingVertical="@dimen/button_padding_vertical"
            app:icon="@drawable/ic_add"
            app:iconSize="18dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
