<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iconTransactionType"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_downward"
            app:tint="@color/debit_red"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/titleTransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Expense"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onSurface" />

    </LinearLayout>

    <!-- Transaction Type Toggle -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleTransactionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpense"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expense"
            android:textColor="@color/debit_red"
            app:icon="@drawable/ic_arrow_downward"
            app:iconTint="@color/debit_red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncome"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Income"
            android:textColor="@color/credit_green"
            app:icon="@drawable/ic_arrow_upward"
            app:iconTint="@color/credit_green" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        app:prefixText="₹ "
        app:startIconDrawable="@drawable/ic_currency"
        app:startIconTint="@color/gradient_start"
        app:boxStrokeColor="@color/gradient_start"
        app:hintTextColor="@color/gradient_start"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description (Optional)"
        app:startIconDrawable="@drawable/ic_description"
        app:startIconTint="@color/md_theme_light_onSurfaceVariant"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Payment Mode Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Payment Method"
        app:startIconDrawable="@drawable/ic_payment"
        app:startIconTint="@color/md_theme_light_onSurfaceVariant"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/spinnerMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        app:startIconDrawable="@drawable/ic_description"
        app:startIconTint="@color/md_theme_light_onSurfaceVariant"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Quick Amount Buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Amounts"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAmount50"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="₹50"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAmount100"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="₹100"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAmount500"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="₹500"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAmount1000"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="₹1000"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="12sp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:backgroundTint="@color/gradient_start"
            app:icon="@drawable/ic_add" />

    </LinearLayout>

</LinearLayout>
